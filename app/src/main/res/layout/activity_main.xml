<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/list"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
       app:layout_constraintBottom_toTopOf="@id/editFieldsBarrier"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.0"
       tools:layout_editor_absoluteX="16dp"
       tools:listitem="@layout/post_layout" />

   <androidx.constraintlayout.widget.Barrier
       android:id="@+id/editFieldsBarrier"
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:constraint_referenced_ids="saveButton,editTextField"
       app:barrierDirection="top" />

   <androidx.appcompat.widget.AppCompatEditText
       android:id="@+id/editTextField"
       android:layout_width="0dp"
       android:background="@android:color/transparent"
       android:importantForAutofill="no"
       android:padding="@dimen/padding_normal"
       android:hint="@string/post_content"
       android:inputType="textMultiLine"
       android:layout_height="wrap_content"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@id/saveButton"
       app:layout_constraintStart_toStartOf="parent" />

   <View
       android:id="@+id/saveButton"
       android:layout_width="48dp"
       android:layout_height="48dp"
       android:background="@android:drawable/checkbox_on_background"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>